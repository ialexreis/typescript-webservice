{
    "name": "typescript-webservice",
    "version": "1.0.0",
    "description": "Base for webservices built with typescript",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest",
        "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
        "build": "tsc",
        "prestart": "npm run build",
        "start": "node src/"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "jest": {
        "testEnvironment": "node",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "dependencies": {
        "bcrypt": "^3.0.6",
        "mongoose": "^5.7.5",
        "restify": "^6.3.4",
        "restify-errors": "^5.0.0",
        "tslint": "^6.1.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^1.0.0",
        "@types/jest": "^22.1.2",
        "@types/mongoose": "^4.7.32",
        "@types/restify": "^5.0.6",
        "@types/restify-errors": "^4.3.2",
        "@types/supertest": "^2.0.4",
        "jest": "^29.3.1",
        "supertest": "^3.0.0",
        "ts-jest": "^29.0.3",
        "typescript": "^2.6.2"
    }
}
